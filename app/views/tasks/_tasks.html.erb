<ul class="list-unstyled">
  <% tasks.each do |task| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(task.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= link_to task.user.name %> <span class="text-muted">posted at <%= task.created_at %></span>
        </div>
        <div>
         <span style="background-color:#FFCACA;">ステータス</span><%= task.status %> <span style="background-color:#FFCACA;">タスク</span> <%= task.content %>
        </div>
        <div>
          <% if current_user == task.user %>
            <%= link_to "Delete", task, method: :delete, data: { confirm: "本当に削除してよろしいですか?" }, class: 'btn btn-danger btn-sm' %>

          <% end %>
        </div>
        
        
      </div>
    </li>
  <% end %>
  <%= paginate tasks %>
</ul>